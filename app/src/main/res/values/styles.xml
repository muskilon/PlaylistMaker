<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="createButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/yp_text_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SettingsMenuRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_items_height</item>
        <item name="android:paddingEnd">@dimen/settings_layout_padding_right</item>
        <item name="android:paddingStart">@dimen/settings_layout_padding_left</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsMenuRowText">
        <item name="android:text">@string/user_agreement</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>

    </style>
    <style name="SettingsMenuRowIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingStart">@dimen/settings_icons_padding_left</item>
        <item name="tint">?android:attr/solidColor</item>

    </style>
    <style name="NavigationToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="NavigationToolBarIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?android:attr/textColorPrimary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <style name="NavigationToolBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="PlaceholderAfterNavigationToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="RefreshButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:text">@string/refresh</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/white_ypDayBlack_ypNight</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ClearHistoryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:text">@string/clear_history</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">?android:attr/textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackSnippet">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="player_list_of_data">
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="android:background">?attr/white_ypDayBlack_ypNight</item>
        <item name="itemIconTint">@drawable/bottom_nav_bar</item>
        <item name="itemTextColor">@drawable/bottom_nav_bar</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="itemRippleColor">@null</item>
        <item name="compatShadowEnabled">false</item>
        <item name="elevation">0dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigation.ActiveItemTextAppearance
        </item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigation.InactiveItemTextAppearance
        </item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">0</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">0</item>

    </style>
</resources>