<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchHistory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        android:id="@+id/youSearchedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:fontFamily="@font/ys_display_medium"
        android:text="@string/you_searched"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/font_size_error" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songsHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedHeight="true"
        app:layout_constraintHeight_max="600dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/youSearchedTitle"
        />

    <Button
        android:id="@+id/clearHistoryButton"
        style="@style/ClearHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/songsHistoryRecyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_medium"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>