<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/NavigationToolBar"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/backArrow"
            style="@style/NavigationToolBarIcon" />

        <TextView
            android:text="@string/medialibrary"
            style="@style/NavigationToolBarText" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/white_ypDayBlack_ypNight"
        app:tabTextAppearance="@style/TabText"
        app:tabTextColor="?attr/black_ypDayWhite_ypNight"
        app:tabIndicatorColor="?android:attr/textColorPrimary"
        app:tabIndicatorFullWidth="true" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>