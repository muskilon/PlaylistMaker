<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchSnippet"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:paddingEnd="12dp">

    <ImageView
        android:id="@+id/snippetImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="52dp"
        android:paddingEnd="25dp">

        <TextView
            android:id="@+id/snippetTrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/ys_display_regular"
            android:paddingBottom="1dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textFontWeight="400"
            android:textSize="@dimen/font_size_medium"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Billie Jean" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/snippetArtistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?android:attr/solidColor"
                android:textFontWeight="400"
                android:textSize="@dimen/font_size_small"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Michael Jackson" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                app:tint="?android:attr/solidColor"
                android:src="@drawable/dot" />

            <TextView
                android:id="@+id/snippetTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?android:attr/solidColor"
                android:textFontWeight="400"
                android:textSize="@dimen/font_size_small"
                android:maxLines="1"
                tools:text="5:01" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/snippetArrowForward"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="18dp"
        android:layout_gravity="end"
        android:src="@drawable/arrow_forward"
        app:tint="?android:attr/solidColor"/>
</FrameLayout>